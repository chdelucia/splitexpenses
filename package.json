    "@typescript-eslint/parser": "^8.47.0",
    "cypress": "^15.7.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-cypress": "^5.2.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^30.2.0",
    "jest-preset-angular": "^14.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-eslint": "^16.4.2",
    "simple-git-hooks": "^2.13.1",
    "sonar-scanner": "^3.1.0",
    "ts-jest": "^29.4.6",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{ts,html}": [
      "prettier --write",
